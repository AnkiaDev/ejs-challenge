<%- include('partials/header'); %>
<h1>Compose</h1>
<form action="/compose" method="POST">
  <div class="form-group">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" />
    <label class="form-label" for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="5"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include('partials/footer'); %>
